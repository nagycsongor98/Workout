<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nagycsongor.workout">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashPage.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginPage.LoginActivity" />
        <activity android:name=".RegisterPage.RegisterActivity" />
        <activity android:name=".MainPage.MainActivity" />
        <activity android:name=".AddWorkoutPage.AddWorkoutActivity" />
        <activity android:name=".DetailsPage.DetailsActivity"></activity>
    </application>

</manifest>